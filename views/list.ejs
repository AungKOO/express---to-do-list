<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(i => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="check"
        value="<%=i._id %>"
        onchange="this.form.submit()"
      />
      <input type="hidden" name="listTitle" value="<%= listTitle%>">
      <p><%= i.name %></p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="listName" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
